{
  "name": "claude-lazygit",
  "version": "1.1.1",
  "description": "AI-powered commit message generator using Claude Code CLI",
  "type": "module",
  "bin": {
    "claude-lazygit": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "cleye": "^1.3.2",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "claude",
    "lazygit",
    "conventional-commits"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/godlyfast/claude-lazygit"
  },
  "homepage": "https://github.com/godlyfast/claude-lazygit#readme",
  "bugs": {
    "url": "https://github.com/godlyfast/claude-lazygit/issues"
